#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define DEF 0
#define LWR 1
#define RSE 2
#define ADJ 3


/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};


/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
 //
 // QWERTY
 // ,-----------------------------------------.                    ,----------------------------------------.
 // | ESC  |   1  |   2  |   3  |   4  |   5  |                   |   6  |   7  |   8  |   9  |   0  |  DEL |
 // |------+------+------+------+------+------|-------    --------|------+------+------+------+------+------|
 // | CAPS |   Q  |   W  |   E  |   R  |   T  |      |    |  +*   |   Y  |   U  |   I  |   O  |   P  | BSPC |
 // |------+------+------+------+------+------|-------    --------|------+------+------+------+------+------|
 // | Tab  |   A  |   S  |   D  |   F  |   G  |      |    |       |   H  |   J  |   K  |   L  |   Ñ  |  ´   |
 // |------+------+------+------+------+------|-------    --------|------+------+------+------+------+------|
 // |LShift|  <>  |   Z  |   X  |   C  |   V  |  :.  |    | ENTER |   B  |   N  |   M  |   -  |  UP  |  '?  |
 // |-----------------------------------------|-------    --------|-----------------------------------------|
 // | LCTR |  WIN | KC_NO| LALT |  ,;  |  SPC | HOME |    |  END  |  SPC |   {  |   }  | LEFT | DOWN | RIGHT|
 //  -------------------------------------------------    ---------------------------------------------------
 //


                        bindings = <
    &kp ESC        &kp N1      &kp N2      &kp N3      &kp N4     &kp N5                            &kp N6    &kp N7     &kp N8      &kp N9     &kp N0     &kp DEL
    &kp CAPS       &kp Q       &kp W       &kp E       &kp R      &kp T       &kp GRAVE       &kp RBKT  &kp Y     &kp U      &kp I       &kp O      &kp P      &kp BSPC
    &kp TAB        &kp A       &kp S       &kp D       &kp F      &kp G       &trans          &kp RALT  &kp H     &kp J      &kp K       &kp L      &kp SEMI   &kp LBKT
    &kp LSHFT      &kp NUBS    &kp Z       &kp X       &kp C      &kp V       &kp SPACE       &kp ENTER &kp B     &kp N      &kp M       &kp E      &kp UP     &kp MINUS
    &kp LCTRL      &mo LWR     &kp LWIN    &kp LALT    &kp DOT    &kp COMMA   &kp HOME        &kp END   &kp SPACE &kp LBKT   &kp RBKT    &kp LEFT   &kp DOWN   &kp RIGHT
                        >;
                };






                lower_layer {
 //
 // QWERTY
 // ,-----------------------------------------.                    ,----------------------------------------.
 // | ESC  |   1  |   2  |   3  |   4  |   5  |                   |   6  |   7  |   8  |   9  |   0  |  DEL |
 // |------+------+------+------+------+------|-------    --------|------+------+------+------+------+------|
 // | CAPS |   Q  |   W  |   E  |   R  |   T  |      |    |  +*   |   Y  |   U  |   I  |   O  |   P  | BSPC |
 // |------+------+------+------+------+------|-------    --------|------+------+------+------+------+------|
 // | Tab  |   A  |   S  |   D  |   F  |   G  |      |    |       |   H  |   J  |   K  |   L  |   Ñ  |  ´   |
 // |------+------+------+------+------+------|-------    --------|------+------+------+------+------+------|
 // |LShift|  <>  |   Z  |   X  |   C  |   V  |  :.  |    | ENTER |   B  |   N  |   M  |   -  |  UP  |  '?  |
 // |-----------------------------------------|-------    --------|-----------------------------------------|
 // | LCTR |  WIN | KC_NO| LALT |  ,;  |  SPC | HOME |    |  END  |  SPC |   {  |   }  | LEFT | DOWN | RIGHT|
 //  -------------------------------------------------    ---------------------------------------------------
 //


                        bindings = <
    &kp ESC        &kp F1       &kp F2      &kp F3      &kp F4     &kp F5                            &kp F6    &kp F7     &kp F8      &kp F9     &kp F10    &kp F11
    &bt BT_CLR     &out OUT_TOG &kp W       &kp E       &kp R      &kp T       &kp GRAVE       &kp RBKT  &kp Y     &kp U      &kp I       &kp O      &kp P      &kp F12
    &bt BT_SEL 0   &kp A        &kp S       &kp D       &kp F      &kp G       &trans          &kp RALT  &kp H     &kp J      &kp K       &kp L      &kp SEMI   &kp LBKT
    &bt BT_SEL 1   &kp NUBS     &kp Z       &kp X       &kp C      &kp V       &kp SPACE       &kp ENTER &kp B     &kp N      &kp M       &kp E      &kp UP     &kp MINUS
    &bt BT_SEL 2   &mo LWR      &kp LWIN    &kp LALT    &kp DOT    &kp COMMA   &kp HOME        &kp END   &kp SPACE &kp LBKT   &kp RBKT    &kp LEFT   &kp DOWN   &kp RIGHT
                        >;
                };






        };



};
